#!/bin/jq

dir=$HOME/git/commitbeat

ls -r $dir/git-1*|xargs grep -l $1|head -n1|xargs cat|jq '[ .[] | select(.actor.login=="RosettaStoned") ][0] | { user: .actor.login, pic: .actor.avatar_url, repo: .repo.name, commit: .payload.commits[0].sha, msg: .payload.commits[0].message, time: .created_at }'
